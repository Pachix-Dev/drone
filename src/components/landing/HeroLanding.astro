---
import { BlurFade } from '../ui/blur-fade'
import { FlipText } from '../ui/flip-text'
---

<section
  class="bg-[url('/img/bg_drone.webp')] bg-center lg:bg-[center_top_-10rem] bg-cover bg-no-repeat h-screen grid lg:flex md:flex-row justify-between p-5 lg:p-20"
>
  <FlipText
    className='text-md font-extrabold -tracking-widest text-[#1e2023] md:text-3xl md:leading-[5rem]'
    word=' 17 y 18 DE OCTUBRE 2025'
    client:only
  />

  <div class='mt-auto w-fit p-4 md:p-10'>
    <FlipText
      className='text-md font-bold -tracking-widest text-[#1e2023]  md:leading-[2rem] ms-auto'
      word='SUMMIT & DEMO'
      client:only
    />
    <FlipText
      className='text-2xl  tracking-widest	 text-[#1e2023] md:text-7xl md:leading-[5rem] '
      word='INNOVATORS'
      client:only
    />
    <FlipText
      className='text-2xl  tracking-widest	 text-[#1e2023] md:text-7xl md:leading-[5rem] ml-[-2rem]'
      word='FORUM MX'
      client:only
    />
    <FlipText
      className='text-md tracking-tighter text-[#1e2023] md:text-2xl md:leading-[2rem]'
      word='"Liberando el Potencial Aéreo:'
      client:only
    />
    <FlipText
      className='text-md tracking-tighter	font-bold text-[#1e2023] md:text-2xl md:leading-[2rem] italic'
      word='El Mundo de los Drones"'
      client:only
    />
    <div class='mt-10 grid md:flex'>
      <FlipText
        className='text-md tracking-tighter	font-bold text-[#1e2023] md:text-2xl md:leading-[2rem] '
        word='CENTRO ECUESTRE SEDENA, '
        client:only
      />
      <FlipText
        className='text-md tracking-tighter text-[#1e2023] md:text-2xl md:leading-[2rem] '
        word='CIUDAD DE MÉXICO, '
        client:only
      />
    </div>
    <BlurFade delay={1} inView direction={'up'} client:only>
      <div class='grid md:flex gap-10'>
        <a
          href='#contactar'
          class='mt-10 bg-[#1e2023] text-white py-2 px-4 rounded-md flex gap-2 items-center hover:bg-slate-700'
        >
          Quiero ser expositor
          <svg
            xmlns='http://www.w3.org/2000/svg'
            fill='none'
            viewBox='0 0 24 24'
            stroke-width='1.5'
            stroke='currentColor'
            class='size-6'
          >
            <path
              stroke-linecap='round'
              stroke-linejoin='round'
              d='M15.75 17.25 12 21m0 0-3.75-3.75M12 21V3'></path>
          </svg>
        </a>
        <a
          href='/'
          class='mt-10 bg-[#1e2023] text-white py-2 px-4 rounded-md flex gap-2 items-center hover:bg-slate-700'
        >
          Conoce más sobre Drone
          <svg
            xmlns='http://www.w3.org/2000/svg'
            fill='none'
            viewBox='0 0 24 24'
            stroke-width='1.5'
            stroke='currentColor'
            class='size-6'
          >
            <path
              stroke-linecap='round'
              stroke-linejoin='round'
              d='M17.25 8.25 21 12m0 0-3.75 3.75M21 12H3'></path>
          </svg>
        </a>
      </div>
    </BlurFade>
  </div>
</section>
