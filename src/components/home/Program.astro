---
import i18next, { t } from "i18next";
import { programs } from "../../data/constans_program.js";
import { Speaker } from "./Speakers.jsx";

const language = i18next.language;
---

<section
  class="my-20 py-10 bg-gradient-to-b from-black/80 via-black/60 to-black/80  text-white"
  id="conferencias"
>
  <div class="container mx-auto px-4">
    <!-- Título principal -->
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-extrabold mb-4">
        {t("home.program_1")}
      </h2>
      <div class="w-24 h-1 bg-[#0578F9] mx-auto"></div>
    </div>

    <!-- Programa de días -->
    <div class="space-y-8">
      {programs.map((day, dayIndex) => (
        <div class="bg-black/30 backdrop-blur-sm rounded-2xl border border-white/20 ">
          <div class="overflow-hidden rounded-t-2xl">
            <!-- Header del día -->
            <div class="bg-gradient-to-r from-[#5F8CC1] to-[#69a0e0] p-6">
              <h3 class="text-2xl md:text-3xl font-bold text-center">
                {day.date}
              </h3>
            </div>
          </div>
          <!-- Eventos del día -->
          <div class="divide-y divide-white/10 relative ">
            {day.events.map((event: any, eventIndex: number) => (
              event.title && (
                <div class="p-6 md:p-8">
                  <div class="grid gap-6 items-start">
                    
                    <!-- Columna 1: Información del evento -->
                    <div class=" space-y-4">
                      <!-- Hora y duración -->
                      <div class="flex flex-wrap gap-4 text-sm md:text-base">
                        <div class="flex items-center gap-2 bg-white/10 rounded-full px-3 py-1">
                          <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="18"
                            height="18"
                            viewBox="0 0 24 24"
                            class="flex-shrink-0"
                          >
                            <g
                              fill="none"
                              stroke="#ffffff"
                              stroke-linecap="round"
                              stroke-linejoin="round"
                              stroke-width="2"
                            >
                              <circle cx="12" cy="12" r="10" />
                              <path d="M12 6v6l4 2" />
                            </g>
                          </svg>
                          <span class="font-medium">{event.time}</span>
                        </div>

                        <div class="flex items-center gap-2 bg-white/10 rounded-full px-3 py-1">
                          <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="16"
                            height="16"
                            viewBox="0 0 16 16"
                            class="flex-shrink-0"
                          >
                            <path
                              fill="#ffffff"
                              d="M11.39 8C13.542 6.635 15 4.012 15 1c0-.339-.019-.672-.054-1H1.055a9.155 9.155 0 0 0-.054 1c0 3.012 1.457 5.635 3.609 7c-2.152 1.365-3.609 3.988-3.609 7c0 .339.019.672.054 1h13.891c.036-.328.054-.661.054-1c0-3.012-1.457-5.635-3.609-7zM2.5 15c0-2.921 1.253-5.397 3.5-6.214V7.214C3.753 6.397 2.5 3.92 2.5 1h11c0 2.921-1.253 5.397-3.5 6.214v1.572c2.247.817 3.5 3.294 3.5 6.214zm7.182-4.538C8.562 9.827 8.501 9.003 8.5 8.503V7.499c0-.5.059-1.327 1.184-1.963c.602-.349 1.122-.88 1.516-1.537H4.8c.395.657.916 1.188 1.518 1.538c1.12.635 1.181 1.459 1.182 1.959V8.5c0 .5-.059 1.327-1.184 1.963c-1.135.659-1.98 1.964-2.236 3.537h7.839c-.256-1.574-1.102-2.879-2.238-3.538z"
                            />
                          </svg>
                          <span class="font-medium">{event.duration}</span>
                        </div>
                      </div>

                      <!-- Título del evento -->
                      <h4 class="text-xl md:text-2xl font-bold text-[#2392A2] leading-tight">
                        {event.title}
                      </h4>

                      <!-- Descripción -->
                      <div class="text-white/90 text-base md:text-lg leading-relaxed">
                        {
                          i18next.language === "es"
                            ? event.description
                            : event.description_en
                        }
                      </div>
                    </div>

                    <!-- Columna 2: Speakers -->
                    <div class="space-y-4 mt-2 ms-2 gap-2 grid lg:grid-cols-3 md:grid-cols-2">
                      {event.speakers?.map((speaker: any) => (
                        speaker.name && (
                          <div class=" ">
                            <!-- Speaker info -->
                            <div class="flex items-center gap-3 mb-3">
                              <div class=" rounded-lg">
                                <Speaker speaker={speaker} language={language} client:only />
                              </div>
                              <div>
                                <h5 class="font-semibold text-white text-sm md:text-base">
                                  {speaker.name}
                                </h5>
                                 <p class="text-white/70 text-xs md:text-sm">
                                  {
                                    i18next.language === "es"
                                      ? speaker.position
                                      : speaker.position_en
                                  }
                                </p>
                                <p class="text-white/70 text-xs md:text-sm">
                                  {speaker.company}
                                </p>
                              </div>
                            </div>
                                                       
                          </div>
                        )
                      ))}
                    </div>

                  </div>
                </div>
              )
            ))}
          </div>
        </div>
      ))}
    </div>

    
  </div>
</section>