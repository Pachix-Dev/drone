---
import i18next, { t, changeLanguage } from "i18next";
import Layout from "../layouts/Layout.astro";
import { hotels, Start } from "../data/constans_hotels.js";

changeLanguage("es");
---

<Layout title='DRONE | Hoteles'>
  <main class='container mx-auto px-4 my-10'>
    <h1 class='font-bold text-4xl'>{t('hotels.title')}</h1>
    <p class='mt-5' set:html={t('hotels.description')} />
    {
      /* <p class='mt-5 font-extrabold text-3xl text-[#e8001e]'>
      {t('hotels.code_reservation')}
    </p>*/
    }
    <div class='mt-10 grid md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6'>
      {
        hotels.map((hotel) => {
          return (
            <div class='border rounded-xl shadow-xl '>
              <img
                src={hotel.src}
                alt={hotel.name}
                class='w-full h-64 object-cover rounded-t-xl'
              />
              <div class='p-4'>
                <p class='font-bold text-gray-600'>{hotel.name}</p>
                <p class='flex mt-3' set:html={Start(hotel.start)} />
                <p class='mt-5'>{hotel.address}</p>

                <p class='flex mt-5'>
                  <img src='/img/hoteles/car-svgrepo-com.svg' width={20} />{' '}
                  {hotel.time_car}
                </p>
                {hotel.flyer_esp && (
                  <a
                    href={
                      i18next.language === 'es'
                        ? hotel.flyer_esp
                        : hotel.flyer_eng
                    }
                    target='_blank'
                    class='mt-5 bg-[#0C3138] text-white px-4 py-2 rounded-lg inline-block hover:bg-black'
                  >
                    {t('hotels.info')}
                  </a>
                )}
                <a
                  href={hotel.googlemaps}
                  target='_blank'
                  class='mt-5  text-white bg-[#1088FF] hover:bg-black inline-block rounded-lg px-4 py-2'
                >
                  Google Maps
                </a>
              </div>
            </div>
          )
        })
      }
