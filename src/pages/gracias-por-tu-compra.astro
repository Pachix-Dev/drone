---
import { changeLanguage, t } from "i18next";
import Confettti from "../components/shared/Confetti";
import { Thanks } from "../components/thanks/Thanks";
import { Redirect } from "../components/shared/Redirect.jsx";
import { DonwloadAccess } from "../components/register/DonwloadAccess";
import LayoutRegister from "@/layouts/LayoutRegister.astro";
import Layout from "@/layouts/Layout.astro";

changeLanguage("es");

const thanksTranslations = t("thanks", { returnObjects: true });
---

<Layout title="DRONE | Gracias por tu compra">
    <video
        src="/videos/bg-drone-registro.mp4"
        autoplay
        loop
        muted
        playsinline
        class="w-full h-fix object-fill fixed top-0 z-[-1]"
    >
    </video>
    <Redirect client:only="react" />
    <div class="w-screen h-full p-5 lg:p-20">
        <div
            class="bg-slate-900/90 rounded-lg px-4 ecomondo-bloq-1 w-full h-full shadow-2xl text-white flex flex-col items-center justify-center relative"
        >
            <Confettti client:visible />

            <div
                class="grid md:flex gap-6 place-items-center w-full justify-center"
            >
                <div
                    class="grid place-items-center place-content-center w-full"
                >
                    <Thanks
                        translates={thanksTranslations}
                        client:only="react"
                    />
                    <img
                        class="mt-10 w-52 z-10"
                        src="/img/droneslogo.webp"
                        alt="DRONE 2025"
                    />
                    <p class="font-bold text-center">
                        {t("thanks.thnks_3")}
                    </p>
                    <p class="text-center mb-5">
                        {t("thanks.thnks_4")}
                    </p>
                    <DonwloadAccess
                        client:only="react"
                        text={t("thanks.thnks_5")}
                    />
                </div>
            </div>
        </div>
    </div>
</Layout>
<style>
    .box {
        color: white;
        font-weight: 800;
        animation: aniload 3s;
    }

    #box1::after {
        content: "Gracias por registrarte";
        display: flex;
        transform: rotateX(180deg);
        background-image: linear-gradient(
            180deg,
            rgba(255, 255, 255, 0) 10%,
            rgba(255, 255, 255, 0.5)
        );
        -webkit-background-clip: text;
        color: transparent;
    }
</style>
